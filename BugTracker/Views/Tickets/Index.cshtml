@using Microsoft.AspNet.Identity;
@using BugTracker.Helpers;
@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
    var ticketHelper = new TicketHelper();
}



<div class="main-panel">

    <br />
    <br />
    <br />
    <br />

    <h2>All Tickets</h2>
    <br />
    <br />
    @if (User.IsInRole("Submitter"))
    {

        <button class="btn btn-primary">
            @Html.ActionLink("+Create New Ticket", "Create")
        </button>

    }
    <br />
    <br />


    <table id="table1" class="table table-bordered table-light col-md-8">
        <thead>
            <tr>
                <th>
                    Project
                </th>
                <th>
                    Type
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Status
                </th>
                <th>
                    Submitter
                </th>
                <th>
                    Developer
                </th>
                <th>
                    Issue
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsResolved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsArchived)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.TicketType.Name)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.Submitter.FullName)
                    </td>
                    @if (item.DeveloperId != null)
                    {
                        <td style="background-color:chocolate">
                            @Html.DisplayFor(modelItem => item.Developer.FullName)
                        </td>

                    }
                    else
                    {
                        <td style="background-color:chocolate">No Dev</td>
                    }
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.Issue)
                    </td>

                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.IsResolved)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.DisplayFor(modelItem => item.IsArchived)
                    </td>
                    <td style="background-color:chocolate">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Dashboard", new { id = item.Id })

                    </td>
                </tr>
            }
        </tbody>

    </table>


    @if (User.IsInRole("Developer"))
    {
        <table id="table3" class="table table-bordered table-light col-md-8">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Project.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketPriorityId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketStatusId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubmitterId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeveloperId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Issue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IssueDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsResolved)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsArchived)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model.Where(t => t.DeveloperId == User.Identity.GetUserId()))
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Project.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketTypeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketPriorityId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketStatusId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmitterId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeveloperId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Issue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsResolved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsArchived)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Dashboard", new { id = item.Id })

                        </td>
                    </tr>
                </tbody>
            }

        </table>


    }


</div>

<br />
<hr />
<h2>My Tickets</h2>
<br />
<br />

<table id="table2" class="table table-bordered table-light col-md-8">
    <thead>
        <tr>
            <th>
                Project
            </th>
            <th>
                Type
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
            <th>
                Issue
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsResolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsArchived)
            </th>
            <th></th>


        </tr>

    </thead>
    <tbody>

        @foreach (var item in ticketHelper.GetMyTickets())
        {
            <tr>
                <td style="background-color:chocolate">
                    @item.Project.Name
                </td>
                <td style="background-color:chocolate">
                    @item.TicketType.Name
                </td>
                <td style="background-color:chocolate">
                    @item.TicketPriority.Name
                </td>
                <td style="background-color:chocolate">
                    @item.TicketStatus.Name
                </td>
                <td style="background-color:chocolate">
                    @item.Issue
                </td>

                <td style="background-color:chocolate">
                    @item.Created
                </td>
                <td style="background-color:chocolate">
                    @item.Updated
                </td>
                <td style="background-color:chocolate">
                    @item.IsResolved
                </td>
                <td style="background-color:chocolate">
                    @item.IsArchived
                </td>
                <td style="background-color:chocolate">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Dashboard", new { id = item.Id })

                </td>



            </tr>
        }
    </tbody>

</table>
@section scripts{

    <script>
        $('#table1').DataTable({ "scrollX": true });
        $('#table2').DataTable({ "scrollX": true });
        $('#table3').DataTable({ "scrollX": true });
    </script>
}
