@model BugTracker.Models.Ticket

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <br />
    <h2>Create Ticket</h2>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="color:snow">
            @Html.LabelFor(model => model.ProjectId, "Project", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("ProjectId", null, "--Select Project--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketTypeId, "Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("TicketTypeId", null, "--Ticket Type--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketPriorityId, "Priority", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("TicketPriorityId", null, "--Ticket Priority--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                @Html.ValidationMessageFor(model => model.TicketPriorityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Issue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Issue, new { htmlAttributes = new { @class = "form-control", style = "color:snow" } })
                @Html.ValidationMessageFor(model => model.Issue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Issue Description", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-8">
                @Html.TextArea("IssueDescription", new { @class = "form-control", @rows = "5" })
            </div>
        </div>
        @*<div class="form-group">
            @Html.Label("IssueDescription", "Issue Description", htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-8">
                @Html.TextArea("IssueDescription", new { htmlAttributes = new { @class = "form-control", @rows = "5" } })

            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Create" class="btn btn-primary btn-block enter-btn" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
