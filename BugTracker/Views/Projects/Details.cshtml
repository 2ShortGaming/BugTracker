@model BugTracker.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    This project has @Model.Tickets.Count tickets 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsArchived)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsArchived)
        </dd>

    </dl>
</div>
<hr />
@if (User.IsInRole("Submitter"))
{
    using (Html.BeginForm("Create", "Tickets", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br />
        <br />
        <br />
        <br />
        <h2>Create Ticket</h2>
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("ProjectId", Model.Id)

            

            <div class="form-group">
                @Html.Label("Ticket Type", "TicketTypeId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("TicketTypeId", null, "--Ticket Type--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                   
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ticket Priority", "TicketPriorityId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("TicketPriorityId", null, "--Ticket Priority--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                  
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ticket Status", "TicketStatusId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("TicketStatusId", null, "--Ticket Status--", htmlAttributes: new { @class = "form-control", style = "color:snow" })
                 
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Issue", "Issue", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.Editor("Issue", new { htmlAttributes = new { @class = "form-control", style = "color:snow" } })
                   
                </div>
            </div>

            <div class="form-group">
                @Html.Label("IssueDescription", "IssueDescription", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextArea("IssueDescription", new { htmlAttributes = new { @class = "form-control" } })
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary btn-block enter-btn" />
                </div>
            </div>
        </div>
    }
}


<hr />

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
