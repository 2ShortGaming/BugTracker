@model IEnumerable<BugTracker.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}
<br />
<br />

<h2 class="col-6 offset-5">Users</h2>
<br />
<br />

<table id="table" class="table table-bordered table-light col-12">
    <thead>
        <tr>

            <th>
                @Html.DisplayName("Full Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("Manage")
            </th>
        </tr>
    </thead>


    @foreach (var user in Model)
    {
        <tbody>
            <tr>
                <td style="background-color:chocolate">
                    @Html.DisplayFor(modelItem => user.FullName)
                </td>
                <td style="background-color:chocolate">
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td style="background-color:chocolate">
                    @Html.ActionLink("Manage Role", "ManageUserRole") |
                    @Html.ActionLink("Manage Projects", "ProjectWizard")
                </td>
            </tr>
        </tbody>
    }

</table>


